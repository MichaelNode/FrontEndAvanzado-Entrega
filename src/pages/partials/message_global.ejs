<div class="container">
    <form id="message-form">
        <h3 class="title">Comments</h3>
        <div class="form-row">
            <div class="form-group col-md-4">
                <input name="email" type="email" class="form-control message-input" id="email" placeholder="Email"
                    required>
            </div>
            <div class="form-group col-md-4">
                <input name="name" type="text" class="form-control message-input" id="name" placeholder="Name" required>
            </div>
            <div class="form-group col-md-4">
                <button id="btn-message" type="submit" class="btn btn-outline-info btn-pub">Publish</button>
            </div>
        </div>
        <div class="form-group">
            <textarea id="message" name="message" maxlength="200" class="form-control message-input" placeholder="Message"
                required></textarea>
        </div>
    </form>
</div>